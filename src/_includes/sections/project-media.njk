<section class='py-section-sm bg-dark text-light'>
    <div class='monz-container'>
        <div class="monz-grid">
            <div class="monz-col-6">
                <h2 class="mb-spacer-2">Media</h2>
                {# TODO: swiper media #}
                {# NOTE: swiper #}
                <div class="relative mb-spacer-2">
                    <div class="swiper -mx-spacer-1" id="monz-swiper-media">
                        <div class="swiper-wrapper">
                            {% for slides in[
                                0,
                                1,
                                2,
                                3,
                                4,
                                5
                            ] %}
                                <div class="swiper-slide px-spacer-1 pb-spacer-1">
                                    <article class="break-inside-avoid-column">
                                        <figure>
                                            <div class="h-spacer-33">
                                                {# NOTE: example of setting an individual pictureObject before including components/picture-example.njk #}
                                                {% set pictureObject = {
                                            'webP': '/img/pexels-rdne-stock-project-8474487-640x424.webp',
                                            'webP2x': '/img/pexels-rdne-stock-project-8474487-640x424@2x.webp',
                                            'jpg': '/img/pexels-rdne-stock-project-8474487-640x424.jpg',
                                            'jpg2x': '/img/pexels-rdne-stock-project-8474487-640x424@2x.jpg'
                                        } %}
                                                {% include "components/picture-example.njk" %}
                                            </div>
                                            {# NOTE: optional caption #}
                                            <figcaption class="text-spacer-1 pt-spacer-1">
                                                <a href="#" class="stretched-link">Slide {{ loop.index}}</a>
                                            </figcaption>
                                        </figure>
                                    </article>
                                </div>
                            {% endfor %}
                        </div>
                    </div>

                    <button type="button" class="text-light swiper-button-prev -left-spacer-1.5 lg:-left-spacer-3">
                        <span class="sr-only">previous slide</span>
                        <svg class="w-spacer-1 h-spacer-1" aria-hidden="true" width="16" height="16">
                            <use href="/img/icons/dist/sprite.svg#icon-caret-left"></use>
                        </svg>
                    </button>
                    <button type="button" class="text-light swiper-button-next -right-spacer-1.5 lg:-right-spacer-3">
                        <span class="sr-only">next slide</span>
                        <svg class="w-spacer-1 h-spacer-1" aria-hidden="true" width="16" height="16">
                            <use href="/img/icons/dist/sprite.svg#icon-caret-right"></use>
                        </svg>
                    </button>
                </div>
                {# NOTE: end swiper #}
                <h3 class="h2 font-serif normal-case">Book Cover</h3>
                <p>
                    <a href="#" class="link-underline text-primary">Download Web Quality</a><br/>
                    <a href="#" class="link-underline text-primary">Download Print Quality</a>
                </p>

                <h3 class="h2 font-serif normal-case mt-spacer-2">Author Images</h3>
                <p>
                    <a href="#" class="link-underline text-primary">Download Web Quality</a><br/>
