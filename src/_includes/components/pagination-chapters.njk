            <li>
                <a href="{{ item.url }}"{% if page.url == item.url %} aria-current="page"{% endif %} class="link-underline bg-primary text-body block uppercase p-spacer-1 text-left text-spacer-1 leading-none {% if page.url == item.url %}link-underline-active{% endif %}">{{ item.chapter }}</a>
            </li>
        {% endfor %}
