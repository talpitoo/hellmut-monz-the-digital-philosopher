<nav aria-label="Pagination">
    <ul class="flex justify-between">
        <li class="grow">
            {% if page.url != courseTOC.first.url %}
                <a href="{{ courseTOC.first.url }}" class="link-underline bg-primary text-body block uppercase p-spacer-1 text-left text-spacer-1 leading-none">
                    <span class="sr-only">First</span>&lt;&lt;</a>
            {% else %}
                <span class="bg-primary text-muted block uppercase p-spacer-1 text-left text-spacer-1 leading-none">
                    <span class="sr-only">First</span>&lt;&lt;</span>
            {% endif %}
        </li>
