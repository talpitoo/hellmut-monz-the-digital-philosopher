<header>
  <div class='bg-primary text-dark py-spacer-1'>
    <div class='monz-container'>
      <div class="monz-grid">
        <p class="leading-none">
          <a href="#" class="link-underline font-bold text-body uppercase">Check out this news!</a>
        </p>
      </div>
    </div>
  </div>

  <div class='bg-dark text-light'>
    <div class='monz-container'>
      <div class="monz-grid uppercase items-center justify-center">
        <div class="flex">
          <a
          href='/' class="mx-auto lg:mx-0"
        >
            <img src="/img/logo-m.svg" alt='Hellmut MONZ logo' width='130' height='48' class="w-auto h-spacer-2 my-spacer-3"/>
          </a>
        </div>

        {% set navPages = collections.all | eleventyNavigation %}
        {% for entry in navPages %}
          {% if entry.includeSelf != false %}
            <div class="hidden lg:block">
              <a href="{{ entry.url }}"
            class="link-underline text-top-navbar font-sans {{'text-dark hover:text-muted' if entry.url in page.url else 'text-light'}}">
                {{ entry.title }}
              </a>
            </div>
          {% endif %}
        {% endfor %}

        <div class="justify-end gap-spacer-2 flex absolute right-0 lg:relative">
          <button
          type='button'
          aria-label='menu'
          class="hidden lg:block"
        >
            <svg class="w-spacer-2 h-spacer-2 text-light" aria-hidden="true">
              <use href="/img/icons/dist/sprite.svg#icon-search"></use>
            </svg>
          </button>
          <button
          type='button'
          aria-label='menu'
          class="hidden lg:block relative"
        >
            <svg class="w-spacer-3 h-spacer-3 -mt-spacer-1 text-light" aria-hidden="true">
              <use href="/img/icons/dist/sprite.svg#icon-cart"></use>
            </svg>
            <span class="absolute flex items-center justify-center top-0 bottom-0 left-0 right-0 font-sans text-center text-spacer-1">0</span>
          </button>
          <button
          type='button'
          aria-label='menu'
          class="hidden lg:block"
        >
            <svg class="w-spacer-2 h-spacer-2 text-light" aria-hidden="true">
              <use href="/img/icons/dist/sprite.svg#icon-fullscreen"></use>
            </svg>
          </button>

          <button
          type='button'
          aria-label='menu'
          id="burger-menu"
          class="lg:-right-spacer-2 mr-spacer-2 lg:-mr-spacer-2 lg:absolute"
        >
            <svg class="w-spacer-2 h-spacer-2 text-light" aria-hidden="true">
              <use href="/img/icons/dist/sprite.svg#icon-hamburger"></use>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class='monz-container'>
    <div class="grid grid-cols-30 lg:grid-cols-96">
      <div class="col-span-2 lg:col-span-7">&nbsp;</div>
      <div class="col-span-2 lg:col-span-12">&nbsp;</div>
      <div class="col-span-1 monz-col-2">&nbsp;</div>
      <div class="col-span-2 lg:col-span-12">&nbsp;</div>
      <div class="col-span-2 monz-col-2 flex justify-center">
        <svg class="relative -top-1 w-spacer-1 h-spacer-1 text-dark" aria-hidden="true">
          <use href="/img/icons/dist/sprite.svg#icon-triangle-down"></use>
        </svg>
      </div>
      <div class="col-span-5 lg:col-span-12">&nbsp;</div>
      <div class="col-span-2 monz-col-2">&nbsp;</div>
      <div class="col-span-5 lg:col-span-12">&nbsp;</div>
      <div class="col-span-2 monz-col-2 flex justify-center">
        <svg class="relative -top-1 w-spacer-1 h-spacer-1 text-dark" aria-hidden="true">
          <use href="/img/icons/dist/sprite.svg#icon-triangle-down"></use>
        </svg>
      </div>
    </div>
  </div>
</header>