<footer id="footer" class="fixed left-0 right-0 bottom-0 z-1">
  <div class="-mt-spacer-1">
    {% include "components/upward-facing-triangles.njk" %}
    <div class="bg-dark">
      <div class='monz-container h-section-sm'>
        {# NOTE: hover on desktop and click on mobile were disabled <button type="button" id="footer-reveal" class="w-full h-section-sm"><span class="sr-only">reveal the footer</span></button> #}
      </div>
    </div>
  </div>

  <div class='bg-dark text-light text-center'>
    <div class='monz-container'>
      {# NOTE: .-mb-spacer-30 is used for the footer reveal, because it should be inside .monz-grid where container-type: inline-size; applies #}
