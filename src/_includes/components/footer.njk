<footer id="footer" class="fixed left-0 right-0 bottom-0 translate-y-spacer-30 hover:!translate-y-0 z-1 transition-transform duration-300">
  {# NOTE: class="!translate-y-0" #}
  <div class="-mt-spacer-1">
    {% include "components/upward-facing-triangles.njk" %}
    <button type="button" id="footer-reveal" class="w-full bg-dark h-section-sm"><span class="sr-only">reveal the footer</span></button>
  </div>

  <div class='bg-dark text-light text-center pb-section-sm'>
    <div class='monz-container'>
      <div class="monz-grid">
        <div class="monz-col-2 lg:col-start-3">
          <img src="/img/logo-monz.svg" alt='Hellmut MONZ' width='515' height='125' class="w-full h-auto mb-spacer-3"/>
