                {% set categories = ['category #1', 'category #2', 'category #3'] %}
                <ul class="list-separator-dot text-muted">
                    {% for category in categories %}
                        <li class="uppercase">{{ category }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>